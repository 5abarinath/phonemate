<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customCardView"
        android:layout_margin="8dp"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/deviceName"
                android:text="One Plus 5"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#808080"
                android:layout_below="@id/deviceName"
                android:id="@+id/horizontalRule"
                android:layout_marginBottom="10dp"
                android:layout_alignRight="@id/deviceName"
                android:layout_alignEnd="@id/deviceName" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/oneplus5"
                android:layout_below="@id/horizontalRule"
                android:id="@+id/deviceThumbnail"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>