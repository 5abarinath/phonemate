<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customCardView"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="50dp"
                android:maxWidth="50dp"
                app:srcCompat="@drawable/oneplus5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/mobileThumbnail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Plus 5T"
                android:id="@+id/thumbnailDesc"
                android:layout_toRightOf="@id/mobileThumbnail"
                android:layout_toEndOf="@id/mobileThumbnail"
                android:gravity="center"
                android:layout_alignBottom="@id/mobileThumbnail"
                android:layout_alignParentTop="true"
                android:maxWidth="50dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>