<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/deviceName"
                android:text="One Plus 5"
                android:layout_marginBottom="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#808080"
                android:layout_below="@id/deviceName"
                android:id="@+id/horizontalRule"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/oneplus5"
                android:layout_below="@id/horizontalRule"
                android:id="@+id/deviceThumbnail"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/deviceThumbnail"
                android:layout_toEndOf="@id/deviceThumbnail"
                android:layout_below="@id/horizontalRule"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="OS: "
                android:textSize="16sp"
                android:id="@+id/deviceDetails"/>

            <ImageView
                android:id="@+id/rupeeImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/deviceDetails"
                android:layout_alignStart="@id/deviceDetails"
                android:layout_below="@id/deviceDetails"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/rupee" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/rupeeImg"
                android:textSize="18sp"
                android:text="15000"
                android:layout_toRightOf="@id/rupeeImg"
                android:layout_toEndOf="@id/rupeeImg"
                android:id="@+id/deviceCost"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/deviceThumbnail"
                app:srcCompat="@drawable/flipkart_icon"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/flipkartImage"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>